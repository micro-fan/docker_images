output:
  logstash:
    enabled: true
    hosts:
      - '${LOGSTASH_HOST:logstash}:${LOGSTASH_PORT:5044}'
    ssl:
      verification_mode: none
    timeout: 15
    slow_start: true
    index: fbeat

filebeat:
  registry.path: /filebeat/registry.json
  inputs:
    - paths:
        - "${LOG_DIR}/*.json_log"
      fields:
        source_type: python_json
      fields_under_root: true
      ignore_older: 1h
    - paths:
        - '${LOG_DIR}/*.log'
        - '/var/log/supervisor/supervisord.log'
        - '/var/log/supervisor/*stdout*.log'
        - '/var/log/supervisor/*stderr*.log'
      fields:
        static: true
        source_type: raw
      fields_under_root: true
      ignore_older: 1h
fields:
  CONTAINER_TYPE: '${CONTAINER_TYPE}'
fields_under_root: true
